{
  "builds": [{ "src": "package.json", "use": "tf-next" }],
  "probes": [
    {
      "path": "/api",
      "status": 200,
      "responseHeaders": {
        "Set-Cookie": "cookie-1, cookie-2"
      }
    },
    {
      "path": "/api/actions/12345/info",
      "status": 200,
      "mustContain": "actionId: 12345"
    },
    {
      "path": "/api/host",
      "requestHeaders": {
        "Host": "example.org"
      },
      "status": 200,
      "mustContain": "host: example.org"
    }
  ]
}
